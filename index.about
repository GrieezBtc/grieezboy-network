<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Tech Solutions</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        /* 1. THEME VARIABLES */
        :root {
            --bg-color: #f8fafc;
            --nav-bg: #ffffff;
            --card-bg: #ffffff;
            --text-main: #1e293b;
            --text-sub: #64748b;
            --primary-color: #4f46e5;
            --accent-success: #10b981;
            --icon-bg: #eef2ff;
            --shadow: rgba(0, 0, 0, 0.08);
            --progress-bg: #e2e8f0;
        }

        [data-theme="dark"] {
            --bg-color: #0f172a;
            --nav-bg: #1e293b;
            --card-bg: #1e293b;
            --text-main: #f1f5f9;
            --text-sub: #94a3b8;
            --primary-color: #818cf8;
            --icon-bg: #334155;
            --shadow: rgba(0, 0, 0, 0.4);
            --progress-bg: #334155;
        }

        /* 2. GENERAL STYLES */
        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: var(--bg-color);
            color: var(--text-main);
            margin: 0;
            line-height: 1.6;
            transition: background-color 0.3s ease;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* 3. NAVIGATION */
        nav {
            background: var(--nav-bg);
            padding: 1rem 0;
            box-shadow: 0 2px 10px var(--shadow);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .nav-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--primary-color);
            text-decoration: none;
        }

        .theme-toggle {
            background: var(--icon-bg);
            border: none;
            color: var(--text-main);
            padding: 8px 16px;
            border-radius: 50px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
        }

        /* 4. HERO SECTION */
        .hero {
            padding: 80px 0 40px;
            text-align: center;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .hero p {
            color: var(--text-sub);
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto 2rem;
        }

        /* 5. DEVICE INFO GRID */
        .section-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .section-label {
            color: var(--primary-color);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-size: 0.8rem;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 80px;
        }

        .info-card {
            background: var(--card-bg);
            padding: 24px;
            border-radius: 24px;
            box-shadow: 0 10px 20px var(--shadow);
            transition: transform 0.3s ease;
        }

        .info-card:hover { transform: translateY(-5px); }

        .card-top {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .info-icon {
            background: var(--icon-bg);
            color: var(--primary-color);
            width: 48px;
            height: 48px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            margin-right: 15px;
        }

        .info-content h3 {
            margin: 0;
            font-size: 0.8rem;
            color: var(--text-sub);
            text-transform: uppercase;
        }

        .info-content p {
            margin: 4px 0 0 0;
            font-size: 1.2rem;
            font-weight: 700;
        }

        /* 6. PROGRESS BARS */
        .visual-metric { margin-top: 15px; }

        .progress-container {
            width: 100%;
            height: 8px;
            background: var(--progress-bg);
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: var(--primary-color);
            width: 0%;
            transition: width 1s ease-in-out;
        }
    </style>
</head>
<body>

    <nav>
        <div class="container nav-content">
            <a href="#" class="logo"><i class="fas fa-bolt"></i> TECHFLOW</a>
            <button class="theme-toggle" onclick="toggleTheme()">
                <i id="theme-icon" class="fas fa-moon"></i>
                <span id="theme-text">Dark Mode</span>
            </button>
        </div>
    </nav>

    <header class="hero">
        <div class="container">
            <h1>Intelligent Device Tracking</h1>
            <p>Our solutions automatically adapt to your hardware and network environment for the best possible experience.</p>
        </div>
    </header>

    <main class="container">
        <section id="info" class="info-section">
            <div class="section-header">
                <p class="section-label">Tech Insights</p>
                <h2 class="section-title">Your Device Information</h2>
            </div>

            <div class="info-grid">
                <div class="info-card">
                    <div class="card-top">
                        <div class="info-icon"><i class="fas fa-heartbeat"></i></div>
                        <div class="info-content">
                            <h3>System Health</h3>
                            <p id="health-label">Analyzing...</p>
                        </div>
                    </div>
                    <div class="visual-metric">
                        <div class="progress-container">
                            <div id="health-bar" class="progress-bar" style="background: var(--accent-success);"></div>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-top">
                        <div class="info-icon"><i class="fas fa-battery-three-quarters"></i></div>
                        <div class="info-content">
                            <h3>Battery Status</h3>
                            <p id="battery-status">Detecting...</p>
                        </div>
                    </div>
                    <div class="visual-metric">
                        <div class="progress-container">
                            <div id="battery-bar" class="progress-bar"></div>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-top">
                        <div class="info-icon"><i class="fas fa-clock"></i></div>
                        <div class="info-content">
                            <h3>Local Time</h3>
                            <p id="datetime">Loading...</p>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-top">
                        <div class="info-icon"><i class="fas fa-globe"></i></div>
                        <div class="info-content">
                            <h3>Public IP</h3>
                            <p id="ip">Fetching...</p>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-top">
                        <div class="info-icon"><i class="fas fa-wifi"></i></div>
                        <div class="info-content">
                            <h3>Network Type</h3>
                            <p id="network-status">Checking...</p>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="card-top">
                        <div class="info-icon"><i class="fas fa-desktop"></i></div>
                        <div class="info-content">
                            <h3>Screen Resolution</h3>
                            <p id="screen-resolution">Loading...</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script>
        // THEME LOGIC
        function toggleTheme() {
            const body = document.documentElement;
            const isDark = body.getAttribute('data-theme') === 'dark';
            body.setAttribute('data-theme', isDark ? 'light' : 'dark');
            document.getElementById('theme-icon').className = isDark ? 'fas fa-moon' : 'fas fa-sun';
            document.getElementById('theme-text').innerText = isDark ? "Dark Mode" : "Light Mode";
        }

        // DEVICE TRACKER LOGIC
        async function updateDashboard() {
            // 1. Clock
            const updateClock = () => {
                document.getElementById('datetime').textContent = new Date().toLocaleTimeString();
            };
            setInterval(updateClock, 1000); updateClock();

            // 2. Display
            document.getElementById('screen-resolution').textContent = `${window.screen.width} Ã— ${window.screen.height}`;

            // 3. Network & Health
            const conn = navigator.connection || navigator.mozConnection || navigator.webkitConnection;
            const netType = conn ? conn.effectiveType.toUpperCase() : (navigator.onLine ? "ONLINE" : "OFFLINE");
            document.getElementById('network-status').textContent = netType;

            let score = 100;
            if (netType.includes('3G')) score = 65;
            if (netType.includes('2G') || !navigator.onLine) score = 30;
            document.getElementById('health-bar').style.width = score + "%";
            document.getElementById('health-label').textContent = score > 70 ? "Optimal Performance" : "Performance Impacted";

            // 4. Battery
            if ('getBattery' in navigator) {
                navigator.getBattery().then(batt => {
                    const syncBatt = () => {
                        const lvl = Math.floor(batt.level * 100);
                        document.getElementById('battery-status').textContent = lvl + "%" + (batt.charging ? " (Charging)" : "");
                        document.getElementById('battery-bar').style.width = lvl + "%";
                        document.getElementById('battery-bar').style.backgroundColor = lvl < 20 ? "#ef4444" : "#4f46e5";
                    };
                    syncBatt();
                    batt.onlevelchange = syncBatt;
                    batt.onchargingchange = syncBatt;
                });
            } else {
                document.getElementById('battery-status').textContent = "Unavailable";
            }

            // 5. IP Address
            try {
                const res = await fetch('https://api.ipify.org?format=json');
                const data = await res.json();
                document.getElementById('ip').textContent = data.ip;
            } catch {
                document.getElementById('ip').textContent = "Hidden/Blocked";
            }
        }

        updateDashboard();
    </script>
</body>
</html>
